<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each_with_index do |friend, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to "Edit this friend", edit_friend_path(friend), class: "btn btn-dark" %></td>
        <td><%= button_to "Destroy this friend", friend, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Friend", new_friend_path, class: "btn btn-success" %>
